{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('preview') }}
{% endblock %}

{% block title %}
    Treeb'Z | Créer votre jeu
{% endblock %}

{% block body %}
    <header>
        <div class="jumbotron jumbotron-fluid mainTitle mx-0">
            <div>
                <h1 class="display-4 text-center py-5">
                    Créez votre jeu de famille
                </h1>
            </div>
        </div>
    </header>
    <section class="mb-5 row mx-0">
        <div>
            <div class="containerStep">
                <ul class="progressbar">
                    <li class="p-1 active">Choisissez le nom du jeu</li>
                    <li class="p-1 active">Téléchargez vos photos</li>
                    <li class="p-1 active">Choisissez vos thèmes</li>
                    <li class="p-1">Confirmez votre commande</li>
                </ul>
            </div>
        </div>
    </section>
    <section>
        <div class="container-fluid">
            <div class="row mt-5">
                <div class="col col-sm col-md-9 mt-5 p-4 viewThemes">
                    <div class="row d-flex justify-content-center">
                        <h2 class="text-uppercase text-center fw-bold">
                            Prévisualisez votre commande
                        </h2>
                        <div class="d-flex justify-content-center">
                            <a href="{{ path('gamecreation_preview', {'command_id': command.id}) }}" class="btn btn-primary text-uppercase fw-bold fw-bold fs-5 mt-5 mx-1">Prévisualiser le jeu en entier</a>
                            <a href="{{ path('gamecreation_preview_one_card', {'command_id': command.id}) }}" class="btn btn-primary text-uppercase fw-bold fw-bold fs-5 mt-5 mx-1">Prévisualiser une carte du jeu</a>
                            <a href="{{ path('gamecreation_preview_one_familly', {'command_id': command.id}) }}" class="btn btn-primary text-uppercase fw-bold fw-bold fs-5 mt-5 mx-1">Prévisualiser une famille du jeu</a>
                        </div>
                            <div class="full-card d-flex justify-content-center mt-5">
                                {% for theme in command.selectedThemes|slice(0, viewTheme) %}
                                    <div class="column">
                                        {% for member in command.members|slice(0, memberNumber) %}
                                            <div class="all">
                                                <img class="theme" src="{{ asset('/uploads/' ~ theme.image) }}" alt="card"/>
                                                <div class="member-photo d-flex justify-content-center">
                                                    <img class="photo" src="{{ vich_uploader_asset(member) }}" alt="{{ member.picture }}"/>
                                                </div>
                                                <div class="member-name d-flex justify-content-center">
                                                    <p>{{ member.name }}</p>
                                                </div>
                                                <div class="d-flex justify-content-center">
                                                    <div class="card-number">
                                                        <span class="number">{{ loop.index }}</span>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <div class="col col-md-3 mt-md-5 p-4 chosenThemes d-flex flex-column">
                        <div class="mb-5">
                            <div class="justify-content-end">
                                <a href="" class="btn btn-primary text-uppercase fw-bold fw-bold fs-5 w-100 mt-5">Payer la commande
                                    <img src="{{ asset('build/images/arrow-right.svg') }}" class="ms-5 d-none d-lg-inline-block">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
