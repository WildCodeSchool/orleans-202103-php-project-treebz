{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('preview') }}
    {{ encore_entry_link_tags('pdf') }}
{% endblock %}

{% block title %}
    Treeb'Z | Créer votre jeu
{% endblock %}

{% block body %}
    <header>
        <div class="jumbotron jumbotron-fluid mainTitle mx-0">
            <div>
                <h1 class="display-4 text-center py-5">
                    Créez votre jeu de famille
                </h1>
            </div>
        </div>
    </header>
    <section class="mb-5 row mx-0">
        <div>
            <div class="containerStep">
                <ul class="progressbar">
                    <li class="p-1 active">Choisissez le nom du jeu</li>
                    <li class="p-1 active">Téléchargez vos photos</li>
                    <li class="p-1 active">Choisissez vos familles</li>
                    <li class="p-1">Confirmez votre commande</li>
                </ul>
            </div>
        </div>
    </section>
    <section>
        <div class="container-fluid">
            <div class="row mt-5">
                <div class="col col-sm col-md-8 mt-5 p-4 viewThemes">
                    <div class="row d-flex justify-content-center">
                        <h2 class="text-uppercase text-center fw-bold">
                            Prévisualisez votre commande
                        </h2>
                        <div class="cards">
                            {% for theme in command.selectedThemes %}
                                {% for member in command.members %}
                                    {% include 'component/_one_card_preview.html.twig' with {theme: theme, member: member} %}
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="col col-md-4 mt-md-5 p-4 chosenThemes d-flex flex-column">
                    <div class="mb-5">
                        <div class="row d-flex justify-content-center">
                            <h2 class="text-uppercase fw-bold text-center mb-5">
                                Récapitulatif
                            </h2>
                            <h4>{{ command.members|length }}
                                membres de la famille :
                            </h4>
                            <ul>
                                {% for member in command.members %}
                                    <li>{{ loop.index }}
                                        .
                                        {{ member.name }}</li>
                                {% endfor %}
                            </ul>
                            <h4>{{ command.selectedThemes|length }}
                                familles séléctionnés :
                            </h4>
                            <ul>
                                {% for theme in command.selectedThemes %}
                                    <li>{{ loop.index }}
                                        .
                                        {{ theme.name }}</li>
                                {% endfor %}
                            </ul>
                            <div class="mb-2  border-top border-bottom">
                                <h3 class="fw-bold">
                                    TOTAL :
                                    {{ priceGame }}€</h3>
                                <h4 class="h5">
                                    Rappel des prix:
                                </h4>
                                <ul>
                                    <li>{{ constant('App\\Service\\GameCard::PRICE_MIN') }}€ pour
                                        {{ constant('App\\Service\\GameCard::GAME_MIN') }}
                                        membres ou moins</li>
                                    <li>{{ constant('App\\Service\\GameCard::PRICE_MAX') }}€ pour
                                        {{ constant('App\\Service\\GameCard::GAME_MIN') + 1 }}
                                        à
                                        {{ constant('App\\Service\\GameCard::GAME_MAX') }}
                                        membres</li>
                                    <li>Pour toutes familles en plus des 7 familles :
                                        {{ constant('App\\Service\\GameCard::PRICE_ADD_THEME') }}€ par famille</li>
                                </ul>
                            </div>


                            {{ form_start(formSelectAddress) }}
                            {{ form_widget(formSelectAddress) }}
                            <div class="text-center my-3">
                                <button class="btn btn-primary">Choisir cette adresse</button>
                            </div>
                            {{ form_end(formSelectAddress) }}
                            <!-- Button trigger modal -->
                            <div class="text-center">
                                <h3 class="my-2 h5">Vous n'avez pas trouvé l'adresse souhaitée ?
                                </h3>
                                <button type="button" class="btn btn-success my-3 w-50" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    Ajouter une nouvelle adresse
                                </button>
                            </div>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Ajouter une nouvelle adresse de livraison</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            {{ form_start(formAddAddress) }}
                                            {{ form_widget(formAddAddress) }}
                                            <div class="modal-footer">
                                                <button class="btn btn-success">Sauvegarder mon adresse</button>
                                                <button type="button" class="btn btn-secondary w-25" data-bs-dismiss="modal">Close</button>
                                            </div>
                                            {{ form_end(formAddAddress) }}

                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- Fin modal -->
                        </div>
                        <div class="justify-content-end">
                            <a href="{{ path('gamecreation_thanks', {'command': command.id}) }}" class="btn btn-primary text-uppercase fw-bold fw-bold fs-5 w-100 mt-5">Payer la commande
                                <img src="{{ asset('build/images/arrow-right.svg') }}" class="ms-5 d-none d-lg-inline-block">
                            </a>

                            <div class="text-center">
                                <a class="btn btn-light text-uppercase fw-bold fw-bold mt-5 fs-5 w-100" href="{{ path('gamecreation_choose_theme', {'id': command.id}) }}">
                                    <span class="me-5 d-none d-lg-inline-block">{% include "component/_left_arrow.html.twig" %}</span>
                                    Modifier mes familles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
