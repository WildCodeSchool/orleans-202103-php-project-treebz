{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block title %}Treeb'Z | Contact{% endblock %}
{% block stylesheets %}
	{{ parent() }}
    {{ encore_entry_link_tags('contact') }}
{% endblock %}

{% block body %}
    <main class="container">
        <div class="contact mt-5 mb-5">
            <div class="contact-title d-flex justify-content-center pt-3 pb-3">
                <img class="envelope me-3" src="{{ asset('build/images/envelope.svg') }}" alt="Courrier"/>
                <h2 class="fw-bold m-0">CONTACT</h2>
            </div>
            <div class="justify-content-center mb-3 mt-3 p-2">
                {{ form_start(form) }}
                    <div class="fw-bold mt-5">
                        <div class="mb-4">{{ form_row(form.firstname) }}</div>
                        <div class="mb-4">{{ form_row(form.lastname) }}</div>
                        <div class="mb-4">{{ form_row(form.email) }}</div>
                        <div class="mb-4">{{ form_row(form.object) }}</div>
                        <div class="mb-4">{{ form_row(form.message) }}</div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-light mt-2 mb-5 fw-bold">Envoyer</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
{% endblock %}