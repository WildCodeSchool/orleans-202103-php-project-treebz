{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Treeb'Z | Contact
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('contact') }}
{% endblock %}

{% block body %}
    <main class="container">
        <div class="contact mt-5 mb-5">
            <div class="contact-title d-flex justify-content-center pt-3 pb-3">
                <img class="envelope me-3" src="{{ asset('build/images/envelope.svg') }}" alt="Courrier"/>
                <h2 class="fw-bold m-0">CONTACT</h2>
            </div>
            <div class="row justify-content-center">
                <div class="contact-form justify-content-center p-2">
                    {{ form_start(form) }}
                    <div class="fw-bold mt-5">
                        {% if app.user %}
                            <div class="mb-4 ">
                                {{ form_row(form.firstname, {'attr': {'value': app.user.userDetail.firstname ?? app.user.email}}) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(form.lastname, {'attr': {'value': app.user.userDetail.lastname ?? app.user.email}}) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(form.email, {'attr': {'value': app.user.email}}) }}
                            </div>
                        {% else %}
                            <div class="mb-4 ">
                                {{ form_row(form.firstname) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(form.lastname) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(form.email) }}
                            </div>
                        {% endif %}
                        <div class="mb-4">
                            {{ form_row(form.object) }}
                        </div>
                        <div class="mb-4">
                            {{ form_row(form.message) }}
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-light mt-2 mb-5 fw-bold">Envoyer</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
