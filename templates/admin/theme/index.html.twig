{% extends 'base.html.twig' %}

{% block title %}Theme index{% endblock %}

{% block body %}
    <h1>Theme index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>ColorText</th>
                <th>StyleText</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for theme in themes %}
            <tr>
                <td>{{ theme.id }}</td>
                <td>{{ theme.name }}</td>
                <td>{{ theme.image }}</td>
                <td>{{ theme.colorText }}</td>
                <td>{{ theme.styleText }}</td>
                <td>
                    <a href="{{ path('theme_show', {'id': theme.id}) }}">show</a>
                    <a href="{{ path('theme_edit', {'id': theme.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('theme_new') }}">Create new</a>
{% endblock %}
