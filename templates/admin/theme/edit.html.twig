{% extends 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %} {{ parent() }} {{ encore_entry_link_tags('newTheme') }} {% endblock %}

{% block body %}
    <h1 class="m-4 mt-3">Modifier un thème</h1>
    <div class="container bg-secondary">
        <div class=" p-4">
            {{ form_start(form) }}
            <div class="mt-3 p-0 p-sm-3">
                {{ form_row(form.name) }}
            </div>
            <div class="mt-3 p-0 p-sm-3">
                {{ form_row(form.pictureFile) }}
            </div>
            <div class="mt-3 col-2 p-0 p-sm-3">
                {{ form_row(form.colorText) }}
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-light mt-4">{{ button_label|default('Modifier') }}</button>
            </div>
            {{ form_end(form) }}
            <div class="d-flex justify-content-start">
                {{ include('admin/theme/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
    <a class="d-flex justify-content-end m-5 text-dark" href="{{ path('theme_index') }}">Retour à la liste</a>
{% endblock %}
