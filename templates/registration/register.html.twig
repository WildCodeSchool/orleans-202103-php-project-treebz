{% extends 'layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('connexion') }}
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container col-sm-6 col-10 mt-5 mb-5">
        <div class="row bg-primary p-1 d-flex justify-content-start align-items-center">
            <h1 class="h3 p-3 d-flex justify-content-center align-items-center font-weight-normal">INSCRIPTION</h1>
        </div>
        <div class="row bg-secondary fw-bold p-5">
            {{ form_start(registrationForm) }}
            <div class="mt-3">
                {{ form_row(registrationForm.userDetail.lastname) }}
            </div>
            <div class="mt-3">
                {{ form_row(registrationForm.userDetail.firstname) }}
            </div>
            <div class="mt-3">
                {{ form_row(registrationForm.userDetail.address) }}
            </div>
            <div class="mt-3">
                {{ form_row(registrationForm.userDetail.postalCode) }}
            </div>
            <div class="mt-3">
                {{ form_row(registrationForm.userDetail.town) }}
            </div>
            <div class="mt-3">
                {{ form_row(registrationForm.userDetail.country) }}
            </div>
            <div class="mt-3">
                {{ form_row(registrationForm.userDetail.phone) }}
            </div>
            <div class="mt-3">
                {{ form_row(registrationForm.email) }}
            </div>
            <div class="mt-3">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'MOT DE PASSE'
                }) }}
            </div>
            <span class="d-inline-block mt-5">
                {{ form_widget(registrationForm.agreeTerms, {'label': "J'ai lu et je suis d'accord"}) }}
            </span>
            <span class="d-inline-block">avec les
                <a class="link-light" href="{{ path('termOfService') }}">termes et conditions</a>
                ainsi que la
                <a class="link-light" href="{{ path('termsDataProtection') }}">
                    politique de confidentialit√©.</a>
            </span>
            <div class="d-flex justify-content-center">
                <button type="submit" class="col-8 col-sm-2 btn btn-light mt-5">Inscription</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}
