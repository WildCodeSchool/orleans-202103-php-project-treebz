{% extends "layout.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('command') }}
	{{ encore_entry_link_tags('gamecreation') }}
{% endblock %}

{% block body %}
	<header>
		<div class="jumbotron jumbotron-fluid mainTitle">
			<div>
				<h1 class="display-4 text-center py-5">
					Historique des commandes
				</h1>
			</div>
		</div>
	</header>
	<div class="container mt-5">
		{% for command in app.user.commands %}
			<div class="card bg-light mb-5 mt-4 p-3">
				<div class="row">
					<div class="col-1">
						<div class="col-12 d-flex justify-content-center">
							<strong>N°</strong>
						</div>
						<div class="mt-3 d-flex justify-content-center">
							<strong>{{ command.id }}</strong>
						</div>
					</div>
					<div class="col-3 offset-1">
						<div class="col-12 d-flex justify-content-center">
							<strong>RÉCAPITULATIF</strong>
						</div>
						<div class="mt-3 d-flex justify-content-center">
							<p>{{ command.projectName }}</p>
						</div>
					</div>
					<div class="col-2">
						<div class="col-12 d-flex justify-content-center">
							<strong>DATE</strong>
						</div>
						<div class="mt-3 d-flex justify-content-center">
							<strong></strong>
							<strong>{{ command.createdAt|date('d/m/Y') }}</strong>
						</div>
					</div>
					<div class="col-2">
						<div class="col-12 d-flex justify-content-center">
							<strong>PRIX</strong>
						</div>
						<div class="mt-3 d-flex justify-content-center">
							<strong>00.00€</strong>
						</div>
					</div>
					<div class="col-1 offset-1">
						<div class="col-12 d-flex justify-content-center">
							<strong>STATUTS</strong>
						</div>
						<div class="mt-3 d-flex justify-content-center">
							<strong>{{ command.status.name }}</strong>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="d-flex justify-content-center">
					<a class="nav-item m-1 btn btn-secondary text-uppercase" href="{{ path('pending_order', {'id': command.id}) }}">Reprenez votre commande</a>
					</div>
				</div>
			</div>
		{% else %}
			<h2>Aucune commande</h2>
		{% endfor %}
	</div>
{% endblock %}
