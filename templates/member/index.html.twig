{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('gamecreation') }}
{% endblock %}

{% block title %}
    Treeb'Z | Créer votre jeu

{% endblock %}

{% block body %}
    <header>
        <div class="jumbotron jumbotron-fluid mainTitle ">
            <div>
                <h1 class="display-4 text-center py-5">
                    Créez votre jeu de famille
                </h1>
            </div>
        </div>
    </header>
    <section class="mb-5 row">
        <div>
            <div class="containerStep">
                <ul class="progressbar">
                    <li class="p-1">Choisissez le nom du jeu</li>
                    <li class="p-1 active">Teléchargez vos membres</li>
                    <li class="p-1">Prévisualisez votre jeu</li>
                    <li class="p-1">Le jeu sera livré bientôt</li>
                </ul>
            </div>
        </div>
    </section>
    <section>
        <div class="container-fluid">
            <div class="row mt-5">
                <div class="col col-sm col-md-3 mt-5 p-4 chosenThemes d-flex flex-column justify-content-between">
                    <div>
                        <h2 class="text-uppercase text-center fw-bold">Membres Créés</h2>
                        <ul class="list-group text-center text-capitalize">
                            {% for member in members %}
                               <li class="list-group-item m-2 fw-bold">
                                {{ loop.index }} - {{ member.name }}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="my-5 text-end">
                        <button type='submit' class="btn btn-primary text-uppercase fw-bold p-3 fw-bold fs-5 w-100">Choisissez vos thèmes
                            <img src="{{ asset('build/images/arrow-right.svg') }}" class="ms-5 d-none d-lg-inline-block"></button>
                    </div>
                </div>
                <div class="col col-sm col-md-9 mt-5 p-4 viewThemes">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h2 class="ms-md-5 text-center fw-bold">AJOUTER DES MEMBRES À VOTRE JEU
                            </h2>
                        </div>
                        <div class="ms-5">
                            <a href="{{ path('member_new') }}" class="btn btn-primary text-uppercase fw-bold">Ajouter un membre
                            </a>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center"></div>
                    <div class="container">
                        <div class="card-deck d-flex justify-content-around flex-wrap">
                            {% for member in members %}
                                <div class="card m-2 p-2 cardTheme d-flex mt-5">
                                <p class="fw-bold text-center bg-gray display-6">{{ loop.index }}</p>
                                      <p class="card-title text-center mb-2">{{ member.name }}</p>
                                    <img class="h-50"src="{{ vich_uploader_asset(member) }}" alt="{{ member.picture }}"/>
                                    <a href="{{ path('member_edit', {'id': member.id}) }}" class="btn btn-secondary fw-bold mt-2 text-uppercase">Modifier</a>
                                    <form method="post" action="{{ path('member_delete', {'id': member.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ member.id) }}">
                                        <button class="btn btn-danger btn-sm mt-2 fw-bold w-100 text-uppercase buttonFont">Supprimer</button>
                                    </form>
                                </div>
                            {% else %}
                                <h3 class="p-5">Pas encore de membre enregistré
                                </h3>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
