{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('gamecreation') }}
{% endblock %}

{% block title %}
Treeb'Z | Créer votre jeu

{% endblock %}

{% block body %}
    <header>
        <div class="jumbotron jumbotron-fluid mainTitle ">
            <div>
                <h1 class="display-4 text-center py-5">
                    Créez votre jeu de famille
                </h1>
            </div>
        </div>
    </header>
    <section class="mb-5 row">
        <div>
            <div class="containerStep">
                <ul class="progressbar">
                    <li class="p-1">Choisissez le nom du jeu</li>
                    <li class="p-1 active">Teléchargez vos photos</li>
                    <li class="p-1">Prévisualisez votre jeu</li>
                    <li class="p-1">Le jeu sera livré bientôt</li>
                </ul>
            </div>
        </div>
    </section>
    <section>
        <div class="container-fluid">
            <div class="row mt-5">
                <div class="col col-sm col-md-3 mt-5 p-4 chosenThemes">
                    <h2 class="text-uppercase text-center">Membres Créés</h2>

                    <ul>
                        {% for member in members %}
                            <li>{{ loop.index }}. {{ member.name }}</li>
                        {% endfor %}
                    </ul>
                    <div>
                      <a href="#" class="btn btn-primary btn-sm m-1">Étape suivante </a>
                    </div>
                </div>
                <div class="col col-sm col-md-9 mt-5 p-4 viewThemes">
                    <a href="{{ path('member_new') }}" class="btn btn-primary m-4">Ajouter un membre </a>
                    <div class="container">
                        <div class="card-deck d-flex justify-content-around flex-wrap">
                            {% for member in members %}
                                <div class="card m-2" style="width: 20rem;">
                                    <h5 class="card-title m-3">{{ loop.index }}. {{ member.name }}</h5>
                                    <img src="{{ asset('uploads_member/') }}{{ member.picture }}" alt="{{ member.picture }}"/>
                                    <div class="card-body">
                                        <a href="{{ path('member_edit', {'id': member.id}) }}" class="btn btn-secondary btn-sm m-1">Modifier</a>
                                        <a href="{{ path('member_show', {'id': member.id}) }}" class="btn btn-secondary btn-sm m-1">Afficher</a>
                                    </div>
                                </div>
                            {% else %}
                                <h3> colspan="5">Pas encore de membre enregistré </h3>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

