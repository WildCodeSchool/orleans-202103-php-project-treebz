{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('gamecreation') }}
{% endblock %}

{% block title %}
Treeb'Z | Créer votre jeu

{% endblock %}

{% block body %}
    <header>
        <div class="jumbotron jumbotron-fluid mainTitle ">
            <div>
                <h1 class="display-4 text-center py-5">
                    Créez votre jeu de famille
                </h1>
            </div>
        </div>
    </header>
    <section class="mb-5 row">
        <div>
            <div class="containerStep">
                <ul class="progressbar">
                    <li class="p-1">Choisissez le nom du jeu</li>
                    <li class="p-1 active">Teléchargez vos membres</li>
                    <li class="p-1">Prévisualisez votre jeu</li>
                    <li class="p-1">Le jeu sera livré bientôt</li>
                </ul>
            </div>
        </div>
    </section>
    <section>
        <div class="container-fluid">
            <div class="row mt-5">
                <div class="col col-sm col-md-3 mt-5 p-4 chosenThemes d-flex flex-column justify-content-between">
                    <div>
                        <h2 class="text-uppercase text-center">Membres Créés</h2>
                        <ul>
                            {% for member in members %}
                                <li>{{ loop.index }}. {{ member.name }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="my-5 text-end">
                        <button type='submit' class="text-uppercase create-button p-3 fw-bold fs-5 w-100">Choisissez votre thème
                        <img src="{{ asset('build/images/arrow-right.svg') }}" class="ms-5 d-none d-lg-inline-block"></button>
                    </div>
                </div>
                <div class="col col-sm col-md-9 mt-5 p-4 viewThemes">
                <div class ="d-flex justify-content-between align-items-center">
                    <div>
                        <h2>AJOUTER DES MEMBRES À VOTRE JEU</h2>
                    </div>
                    <div>
                        <a href="{{ path('member_new') }}" class="btn btn-primary m-4">Ajouter un membre </a>
                    </div>
                </div>
                    <div class="container">
                        <div class="card-deck d-flex justify-content-around flex-wrap">
                            {% for member in members %}
                                <div class="card m-2 p-2 cardTheme d-flex">
                                    <p class="card-title m-3">{{ loop.index }}. {{ member.name }}</p>
                                    <img src="{{ asset('uploads_member/') }}{{ member.picture }}" alt="{{ member.picture }}"/>
                                    <a href="{{ path('member_edit', {'id': member.id}) }}" class="btn btn-secondary btn-sm mt-2">Modifier</a>
                                    <form method="post" action="{{ path('member_delete', {'id': member.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ member.id) }}">
                                        <button class="btn btn-danger btn-sm mt-2 w-100">Delete</button>
                                    </form>
                                </div>
                            {% else %}
                                <h3>Pas encore de membre enregistré </h3>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

