{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('gamecreation') }}
{% endblock %}

{% block title %}
	Treeb'Z | Créer votre jeu

{% endblock %}

{% block body %}
	<header>
		<div class="jumbotron jumbotron-fluid mainTitle ">
			<div>
				<h1 class="display-4 text-center py-5">
					Créer votre jeu de famille
				</h1>
			</div>
		</div>
	</header>
	<section class="mb-5 row mx-0">
		<div>
			<div class="containerStep">
				<ul class="progressbar">
					<li class="p-1 active">Choisir le nom du jeu</li>
					<li class="p-1">Télécharger vos photos</li>
					<li class="p-1">Choisir vos familles</li>
					<li class="p-1">Confirmer votre commande</li>
				</ul>
			</div>
		</div>
	</section>
	<section class="titleDeco">
		<div class="text-left offset-lg-3 col-lg-6 offset-md-2 col-md-8 offset-1 col-10">
			<h2 class="display-6 text-center py-5 text-uppercase" id="reglesFamille">
				Modifier un membre
			</h2>
			<div class="justify-content-center mb-3 mt-3 p-2">
				{{ form_start(form) }}
				<div class="fw-bold mt-5">
					<div class="mb-4">{{ form_row(form.name) }}</div>
					<div class="mb-4">{{ form_row(form.pictureFile, {'attr': {'class': 'form-control'}}) }}</div>
				</div>
				<div class="d-flex justify-content-between align-items-center">
					<a class="btn btn-secondary text-uppercase fw-bold" href="{{ path('member_index', {'command': command}) }}">
						<span class="me-5 d-none d-lg-inline-block">{% include "component/_left_arrow.html.twig" %}</span>
						Revenir à l'étape précédente</a>
					<div class="d-flex flex-row">
						<button class="btn btn-primary text-uppercase fw-bold m-4">Modifier le membre</button>
						{{ form_end(form) }}
						<form method="post" action="{{ path('member_delete', {'id': member.id}) }}" onsubmit="return confirm(' Êtes vous sur de vouloir supprimer ce membre?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ member.id) }}">
							<button class="btn btn-danger text-uppercase fw-bold m-4">Supprimer</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
