{% extends 'layout.html.twig' %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('connexion') }}
{% endblock %}

{% block body %}
	<div class="container col-sm-6 col-10 mt-5 mb-5">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<div class="row bg-primary p-1 d-flex align-items-center">
			<h1 class="h3 p-3 font-weight-normal d-flex justify-content-center">RÉINITIALISEZ VOTRE MOT DE PASSE</h1>
		</div>
		<div class="row bg-secondary p-5">
			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email) }}
			<div class="mt-3">
				<small>
					Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
				</small>
			</div>
			<div class="d-flex justify-content-center mt-3">
				<button class="btn btn-light">Envoyer</button>
				{{ form_end(requestForm) }}
			</div>
		</div>
	</div>
{% endblock %}
